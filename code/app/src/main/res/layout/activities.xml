<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#222121">

    <ImageButton
        android:id="@+id/music_button"
        android:layout_width="173dp"
        android:layout_height="168dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#D9D9D9"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/listen"
        android:contentDescription="Listen to music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <ImageButton
        android:id="@+id/dancer_button"
        android:layout_width="173dp"
        android:layout_height="168dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#D9D9D9"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dancer"
        android:contentDescription="Dancing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <ImageButton
        android:id="@+id/joystick_button"
        android:layout_width="173dp"
        android:layout_height="168dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#D9D9D9"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/joystick"
        android:contentDescription="Play video games"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

    <ImageButton
        android:id="@+id/walk_button"
        android:layout_width="173dp"
        android:layout_height="168dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#D9D9D9"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/walk"
        android:contentDescription="Go for a walk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <ImageButton
        android:id="@+id/playing_button"
        android:layout_width="173dp"
        android:layout_height="168dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#D9D9D9"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/playing"
        android:contentDescription="Play sports"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />

    <ImageButton
        android:id="@+id/travel_button"
        android:layout_width="173dp"
        android:layout_height="168dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#D9D9D9"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/destination"
        android:contentDescription="Travel destinations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.701" />

    <ImageButton
        android:id="@+id/relationship_button"
        android:layout_width="173dp"
        android:layout_height="168dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#D9D9D9"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/relationship"
        android:contentDescription="Relationships and connections"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

    <ImageButton
        android:id="@+id/other_button"
        android:layout_width="173dp"
        android:layout_height="168dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#D9D9D9"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/other"
        android:contentDescription="Other activities"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965" />

    <Button
        android:id="@+id/next_button_activities"
        android:layout_width="212dp"
        android:layout_height="55dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/inter"
        android:text="@string/next"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/feel_better_message"
        android:layout_width="317dp"
        android:layout_height="78dp"
        android:fontFamily="@font/inter"
        android:text="@string/what_helps_you_feel_better_when_you_are_down"
        android:textAlignment="center"
        android:textColor="#F8F4F4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/all_that_apply_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_all_that_apply"
        android:textColor="#8C8484"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

</androidx.constraintlayout.widget.ConstraintLayout>