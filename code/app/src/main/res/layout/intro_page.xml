<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222121"
    android:id="@+id/intro_page"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/intro_happy"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/hapi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp" />


    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/intro_sad"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/sad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp"/>

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/intro_confused"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/confused"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp"/>

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/intro_shameful"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/shame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp"/>

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/intro_shy"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/shy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp"/>

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/intro_disgusted"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/disgust"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp"/>

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/intro_angry"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/angry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp"/>

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/intro_fear"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/fear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp"/>

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/intro_surprised"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/surprised"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp"/>

    <ImageView
        tools:ignore="contentDescription"
        android:id="@+id/intro_tired"
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:src="@drawable/tired"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-200dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/jomolhari"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/feelin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#F5E6D3"
        android:textSize="70sp"
        android:textStyle="bold|italic" />


</androidx.constraintlayout.widget.ConstraintLayout>