<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222121"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/jar_image"
        android:layout_centerHorizontal="true"
        android:textColor="#F5E6D3"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/jar_image"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/mood_jar"
        android:src="@drawable/jar_empty" />

<!--    <com.airbnb.lottie.LottieAnimationView-->
<!--        android:id="@+id/fireworks_animation"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:visibility="gone"-->
<!--        app:lottie_autoPlay="false"-->
<!--        app:lottie_loop="true"-->
<!--        app:lottie_rawRes="@raw/fireworks_anim" />-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fireworks_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/fireworks_anim"
        app:lottie_speed="1.0"
        app:lottie_renderMode="hardware"
        android:layerType="hardware"/>

    <Button
        android:id="@+id/unlock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jar_image"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#4CAF50"
        android:text="@string/unlock_jar"
        android:textColor="#F5E6D3"
        android:visibility="gone" />

    <Button
        android:id="@+id/add_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/unlock_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="@string/add_positive_note"
        android:textColor="#F5E6D3" />

</RelativeLayout>
