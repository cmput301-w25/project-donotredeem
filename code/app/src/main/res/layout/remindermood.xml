<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222121">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/discussion"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="216dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="181dp"
        android:layout_height="39dp"
        android:text="Almost there..."
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="297dp"
        android:layout_height="68dp"
        android:text="Do you want reminders to log your mood? "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="593dp" />

    <Button
        android:id="@+id/yes_remindermood"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:backgroundTint="#85E023"
        android:text="YES"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="737dp" />

    <Button
        android:id="@+id/no_remindermood"
        android:layout_width="106dp"
        android:layout_height="48dp"
        android:backgroundTint="#F44336"
        android:text="NO"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="733dp" />
</androidx.constraintlayout.widget.ConstraintLayout>