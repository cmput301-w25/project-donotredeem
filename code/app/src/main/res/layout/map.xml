<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/mood_map_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amatica_sc_bold"
        android:paddingStart="10dp"
        android:paddingTop="16dp"
        android:text="Mood map"
        android:textColor="@android:color/black"
        android:textSize="60sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/filter_icon"
        android:layout_height="55dp"
        android:layout_width="55dp"
        android:layout_marginStart="37dp"
        android:baselineAlignBottom="true"
        android:scaleType="centerInside"
        app:tint="#222121"
        android:backgroundTint="#F5E6D3"
        app:srcCompat="@drawable/setting"
        android:layout_marginTop="48dp"
        android:contentDescription="Filter button"

        />

    <ImageButton
        android:id="@+id/friends_icon"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginStart="25dp"
        android:baselineAlignBottom="true"
        android:scaleType="centerInside"
        app:tint="#222121"
        android:backgroundTint="#F5E6D3"
        android:src="@drawable/map_friends"
        android:layout_marginTop="530dp"
        android:contentDescription="Filter button"

        />

    <ImageButton
        android:id="@+id/me_icon"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginStart="25dp"
        android:baselineAlignBottom="true"
        android:scaleType="centerInside"
        android:backgroundTint="#F5E6D3"
        android:src="@drawable/pfpicon"
        android:layout_marginTop="590dp"
        android:contentDescription="Filter button"
        />

    <ImageButton
        android:id="@+id/km_icon"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_marginStart="25dp"
        android:baselineAlignBottom="true"
        android:scaleType="centerInside"
        app:tint="#222121"
        android:backgroundTint="#F5E6D3"
        app:srcCompat="@drawable/map_distance"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="650dp"
        android:contentDescription="Filter button"

        />

</FrameLayout>

