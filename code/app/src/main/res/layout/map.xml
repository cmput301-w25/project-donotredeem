<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/mood_map_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Mood map"
        android:textSize="55sp"
        android:textStyle="bold"
        android:paddingStart="50dp"
        android:textColor="@android:color/black"
        android:layout_gravity="top|center_horizontal"
        android:paddingTop="16dp"
        />
<!--    android:fontFamily="@font/amatica_sc_bold"-->

    <ImageButton
        android:id="@+id/filter_icon"
        android:layout_height="55dp"
        android:layout_width="55dp"
        android:layout_marginStart="37dp"
        android:baselineAlignBottom="true"
        android:scaleType="centerInside"
        android:backgroundTint="#F5E6D3"
        app:srcCompat="@drawable/setting"
        android:layout_marginTop="38dp"
        android:contentDescription="Filter button"

        />

    <ImageButton
        android:id="@+id/friends_icon"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginStart="25dp"
        android:baselineAlignBottom="true"
        android:scaleType="centerInside"
        android:backgroundTint="#F5E6D3"
        android:src="@drawable/few_people"
        android:layout_marginTop="550dp"
        android:contentDescription="Filter button"

        />

    <ImageButton
        android:id="@+id/me_icon"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginStart="25dp"
        android:baselineAlignBottom="true"
        android:scaleType="centerInside"
        android:backgroundTint="#F5E6D3"
        android:src="@drawable/pfpicon"
        android:layout_marginTop="600dp"
        android:contentDescription="Filter button"

        />

    <ImageButton
        android:id="@+id/km_icon"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginStart="25dp"
        android:baselineAlignBottom="true"
        android:scaleType="centerInside"
        android:backgroundTint="#F5E6D3"
        app:srcCompat="@drawable/location"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="650dp"
        android:contentDescription="Filter button"

        />

</FrameLayout>

